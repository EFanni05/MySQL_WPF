<Window x:Class="MySQL_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySQL_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="220,55,0,0" VerticalAlignment="Top" Click="Add"/>
        <TextBox x:Name="IDText" HorizontalAlignment="Left" Margin="50,61,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NameText" HorizontalAlignment="Left" Margin="50,101,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="UpdateButton" Content="Update" HorizontalAlignment="Left" Margin="220,86,0,0" VerticalAlignment="Top" Click="Update"/>
        <Button x:Name="DeleteButton" Content="Delete" HorizontalAlignment="Left" Margin="290,55,0,0" VerticalAlignment="Top" Click="Delete"/>
        <ListBox x:Name="Lista" HorizontalAlignment="Left" Height="220" Margin="40,144,0,0" VerticalAlignment="Top" Width="130" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
